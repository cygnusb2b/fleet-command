{% extends '@AppBundle/Resources/views/base.html.twig' %}
{% block title %}Home{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-12">
            <h1>Commander's Log</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                <ul class="tasks list-group">
                    {% for id, task in tasks %}
                    <li class="task list-group-item">
                        <a href="{{path('toggle-task', {id: id})}}" class="task-check">
                            {% if task.complete %}
                            <i class="fa fa-check-square-o"></i>
                            {% else %}
                            <i class="fa fa-square-o"></i>
                            {% endif %}
                        </a>
                        <div class="task-body">
                            <h2>{{ task.name }}</h2>
                            <p>{{ task.description }}</p>
                        </div>
                        <a href="{{path('remove-task', {id: id})}}" class="btn btn-xs btn-danger task-remove"><i class="fa fa-trash"></i> Remove</a>
                        <div class="clearfix"></div>
                    </li>
                    {% else %}
                    <li class="task none list-group-item text-muted">
                        <h2>No logs exist</h2>
                    </li>
                    {% endfor %}
                    <form action="{{ path('create-task') }}" method="post">
                    <li class="task new list-group-item">
                        <input type="text" name="name" class="form-control" placeholder="Log Title">
                        <textarea name="description" class="form-control" placeholder="Stardate 7014.3..."></textarea>
                        <button class="btn btn-create btn-primary btn-block" type="submit">Add Mission Log</button>
                    </li>
                    </form>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
